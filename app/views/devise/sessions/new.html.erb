<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="center-bloc">
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean, label: "Se rappeler de moi" if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Se connecter", class: "btn-brown" %>
  </div>
  &nbsp;
  <%= link_to "Tout nouveau ? S'enregistrer", new_registration_path(resource_name), class: "btn" %><br />
  <%= link_to "Aie ! Mot de passe oubliÃ©?", new_password_path(resource_name), class: "btn"  %><br />
<% end %>
</div>


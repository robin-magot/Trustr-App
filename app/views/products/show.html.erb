<div class="card-center card-trustr">
  <h2><%= @product.name %><h2>
</div>
<div class="row">
  <div class="col-6">
    <div class="score-square text-center" > <%= @product.indicators_trusted_count %> / <%= @product.indicators.count  %></div>
    <div class="card">
      <div class="card-body">
        <% @product.indicators.each do |indicator|%>
        <div class="card-center">
          <%= indicator.title %>
          => <%= indicator.content %>
          <div class="cercle-<%=indicator.trusted? ? 'green' : 'red'%>">
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
  

<div class="center-bloc">
  <a href=<%=root_path%> class="card-center card-trustr btn btn-flat btn-brown"> Nouvelle Recherche </a>
</div>